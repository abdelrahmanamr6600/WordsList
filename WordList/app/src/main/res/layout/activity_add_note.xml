<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddWordActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="10dp"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:inputType="text"
        android:hint="@string/word"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText_wordMeaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:inputType="text"
       android:hint="@string/word_meaning"
        android:layout_below="@id/editText_word"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextText_WordType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="10dp"
        android:inputType="text"
     android:hint="@string/word_type"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@id/editText_wordMeaning"/>
</RelativeLayout>